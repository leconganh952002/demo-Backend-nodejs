<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create A User</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>


<body>
    <div class="topnav">
        <a href="/">Home</a>
        <a href="/create" class="active">Create Users</a>
    </div>
    <div class="form-add-new">
        <form action="/create-user" method="post">
            <fieldset>
                <legend> Add New Users </legend>
                <div class="input-group">
                    <label>Email: </label>
                    <input type="text" id="emailId" name="email" placeholder="Enter your email">
                </div>

                <div class="input-group">
                    <label>Name: </label>
                    <input type="text" name="myname" placeholder="Enter your Name">
                </div>

                <div class="input-group">
                    <label>City: </label>
                    <input type="text" name="city" placeholder="Enter your City">
                </div>
                <div>
                    <button> Save </button>
                </div>

            </fieldset>
        </form>
    </div>
</body>

</html>